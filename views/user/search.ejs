<%-include('../user/layout/user-header.ejs') -%>



    <!-- breadcrumb-section -->
    <div class="homepage-slider">
        <% banner.forEach(function(x) { %>
            <div class="single-homepage-slider " style=" background-image: url('/images/cars/<%=x.image %>');">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 col-lg-7 offset-lg-1 offset-xl-0">
                            <div class="hero-text">
                                <div class="hero-text-tablecell">
                                    <p class="subtitle">
                                        <%= x.bannerName %>
                                    </p>
                                    <h1>
                                        <%= x.description %>
                                    </h1>
                                    <div class="hero-btns">
                                        <a href="/allproducts" class="boxed-btn">Show Collection</a>
                                        <a href="contact.html" class="bordered-btn">Contact Us</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
    <!-- end breadcrumb section -->

    <!-- products -->
    <div class="product-section mt-150 mb-150">
        <div class="container">


           


            <div class="row product-lists ">
                <%search.forEach(function(x){ %>
                    <div class="col-lg-4 col-md-6 text-center">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a href="/singleproduct/<%= x._id %>"><img src="/images/cars/<%= x.image[0] %>"
                                        style="height:150px;object-fit: cover;" alt=""></a>
                            </div>
                            <h3>
                                <%=x.productName%>
                            </h3>
                            <p class="product-price"><span>
                                    <%=x.price%>
                                </span> </p>

                            
                                <!-- <form action="/addToWishlist/<%= x._id %> " method="post">
                                    <button type="submit" class="btn btn-light btn-outline btn-lg rounded-pill" style="width: 200px;"><b>Add to Interest</b></button>
                                </form> -->

                        </div>
                    </div>

                    <% }) %>
            </div>

                        
                    </div>
                </div>
            </div> 
        </div>
    </div>
    <!-- end products -->



<%-include('../user/layout/user-footer.ejs') -%>