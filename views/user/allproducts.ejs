            <div class="row product-lists ">
                <%products.forEach(function(x){ %>
                    <div class="col-lg-4 col-md-6 text-center">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a href="/singleproduct/<%= x._id %>"><img src="/images/cars/<%= x.image[0] %>"
                                        style="height:150px;object-fit: cover;" alt=""></a>
                            </div>
                            <h3>
                                <%=x.productName%>
                            </h3>
                            <p class="product-price"><span><%=x.price%></span> </p>
                            <p class="product-price"><b><span>Year-<%=x.year%> | KM-<%=x.km%></span></b> </p>
