  <div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3 mb-4">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Edit Profile</div>
                        <hr>
                        <form action="/updateProfile/<%= profile._id %>" method="post">
                            <div class="form-group">
                                <label for="input-1">Full Name</label>
                                <input type="text" class="form-control" required name="fullName" id="input-1"
                                    value="<%= profile.fullName %>" placeholder="Enter Your Full Name">
                            </div>
                            <div class="form-group">
                                <label for="input-1">User Name</label>
                                <input type="text" class="form-control" required name="userName" id="input-1"
                                    value="<%= profile.userName %>" placeholder="Enter Your User Name">
                            </div>
                            <div class="form-group">
                                <label for="input-2">Email</label>
                                <input type="email" name="email" required value="<%= profile.email %>"
                                    class="form-control" id="input-2" placeholder="Enter Your Email Address">
                            </div>
                            <div class="form-group">
                                <label for="input-3">Mobile</label>
                                <input type="text" class="form-control" required value="<%= profile.phone %>"
                                    name="phone" id="input-3" placeholder="Enter Your Mobile Number">
                            </div>
