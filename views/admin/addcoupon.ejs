<%-include('../admin/layout/admin-header.ejs') -%>

    <div class="col-lg">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Add Coupon</div>
                <hr>
                <form action="/admin/addCoupon" method="post" enctype="multipart/form-data">


                    <div class="form-group">
                        <label for="input-4">Coupon Name</label>
                        <input class="form-control" id="input-4" type="text" placeholder="Coupon Name" required
                            name="couponName">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Discount Percentage</label>
                        <input class="form-control" id="input-5" type="number" placeholder="Discount" required
                            name="discount">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Maximum Discount</label>
                        <input class="form-control" id="input-5" type="number" placeholder="Maximum" required
                            name="maximum">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success px-5"> Add Coupon</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <%-include('../admin/layout/admin-footer.ejs') -%>